{
  "name": "@org/source",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "api:dev": "nx serve @org/api",
    "api:build": "nx build @org/api",
    "api:lint": "nx lint @org/api",
    "web:dev": "nx dev @org/web",
    "web:build": "nx build @org/web",
    "web:lint": "nx lint @org/web",
    "dev:all": "nx run-many -t dev",
    "infra:up": "docker compose up -d",
    "infra:down": "docker compose down",
    "infra": "docker compose up -d --build",
    "nx": "nx",
    "commit": "cz",
    "release": "semantic-release",
    "commitlint": "commitlint --edit",
    "prepare": "husky",
    "db:generate": "drizzle-kit generate --config=packages/database/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=packages/database/drizzle.config.ts",
    "db:push": "drizzle-kit push --config=packages/database/drizzle.config.ts",
    "db:seed": "npx tsx --env-file=.env packages/database/src/lib/seed.ts",
    "db:studio": "drizzle-kit studio --config=packages/database/drizzle.config.ts",
    "test:api": "nx test @org/api",
    "test:web": "nx test @org/web",
    "test:db": "nx run database:test",
    "test:e2e": "npx nx run @org/web-e2e:e2e",
    "test:all": "nx run-many -t test e2e"
  },
  "lint-staged": {
    "*.{js,ts,tsx,mjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@next/eslint-plugin-next": "^16.0.1",
    "@nx/devkit": "^22.5.1",
    "@nx/eslint": "^22.5.1",
    "@nx/eslint-plugin": "^22.5.1",
    "@nx/js": "^22.5.1",
    "@nx/nest": "^22.5.1",
    "@nx/next": "^22.5.1",
    "@nx/node": "^22.5.1",
    "@nx/playwright": "^22.5.1",
    "@nx/vitest": "^22.5.1",
    "@nx/web": "^22.5.1",
    "@nx/webpack": "^22.5.1",
    "@playwright/test": "^1.36.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@swc-node/register": "^1.11.1",
    "@swc/cli": "^0.8.0",
    "@swc/core": "^1.15.8",
    "@swc/helpers": "^0.5.18",
    "@types/bcrypt": "^6.0.0",
